platform :ios, '7.0'  # it's time sorry older phone users.


# for now this covers my bases pretty well I think
# got BDD/TDD style tester, nice matchers
# sensible mocking and stubbing nice http mocker
# finally a nice framework for UIAutomation
# fork and add anything that seems reasonable
target :<PROJECT_NAME>Tests, :exclusive => true do
  pod 'Expecta', '~> 0.2.3' #https://github.com/specta/expecta/
  pod 'Specta', '~> 0.2.1' #https://github.com/specta/specta
  pod 'OCMockito', '~> 1.0' #https://github.com/jonreid/OCMockito
  pod 'OHHTTPStubs' #https://github.com/AliSoftware/OHHTTPStubs
  pod 'KIF', '~> 2.0' #https://github.com/kif-framework/KIF
end
